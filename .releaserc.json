{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "docs", "release": false },
          { "type": "style", "release": false },
          { "type": "chore", "release": false },
          { "type": "test", "release": false },
          { "type": "ci", "release": false },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Novas Funcionalidades" },
            { "type": "fix", "section": "üêõ Corre√ß√µes de Bugs" },
            { "type": "perf", "section": "‚ö°Ô∏è Melhorias de Performance" },
            { "type": "refactor", "section": "‚ôªÔ∏è Refatora√ß√µes" },
            { "type": "docs", "section": "üìö Documenta√ß√£o", "hidden": true },
            { "type": "style", "section": "üíÑ Estilos", "hidden": true },
            { "type": "chore", "section": "üîß Manuten√ß√£o", "hidden": true },
            { "type": "test", "section": "‚úÖ Testes", "hidden": true },
            { "type": "ci", "section": "üë∑ CI/CD", "hidden": true }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nTodas as mudan√ßas not√°veis neste projeto ser√£o documentadas neste arquivo.\n\nO formato √© baseado em [Keep a Changelog](https://keepachangelog.com/pt-BR/1.0.0/),\ne este projeto adere ao [Versionamento Sem√¢ntico](https://semver.org/lang/pt-BR/)."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
