# ============================================
# CONFIGURAÇÃO DE AMBIENTE - 7CARE
# ============================================
# Copie para .env e preencha com valores reais
# NUNCA commite o arquivo .env com credenciais

# ============================================
# DATABASE (OBRIGATÓRIO)
# ============================================
# URL de conexão PostgreSQL Neon Database
# Formato: postgresql://user:password@host/database?sslmode=require
# Obtenha em: https://console.neon.tech
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# ============================================
# AUTENTICAÇÃO JWT (OBRIGATÓRIO)
# ============================================
# JWT Secret - MÍNIMO 32 caracteres
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-this-to-a-very-long-random-string-minimum-32-characters

# JWT Refresh Secret - MÍNIMO 32 caracteres
JWT_REFRESH_SECRET=another-very-long-random-string-minimum-32-characters

# Tempo de expiração dos tokens
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SERVIDOR
# ============================================
# Ambiente: development | production | test
NODE_ENV=development

# Porta do servidor (padrão: 5000)
PORT=5000

# URLs base (para CORS)
API_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000

# ============================================
# CRIPTOGRAFIA OFFLINE
# ============================================
# Secret para AES-256-GCM (32 bytes em hex)
# Gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-32-bytes-hex

# ============================================
# UPLOAD DE ARQUIVOS
# ============================================
# Tamanho máximo em bytes (padrão: 5MB)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# ============================================
# RATE LIMITING
# ============================================
# Tentativas de login permitidas
MAX_LOGIN_ATTEMPTS=10
RATE_LIMIT_WINDOW=15

# ============================================
# LOGS
# ============================================
# Nível: error | warn | info | debug
LOG_LEVEL=info
LOG_SQL=false

# ============================================
# SEGURANÇA
# ============================================
# Secret para sessões (min 32 chars)
SESSION_SECRET=your-session-secret-minimum-32-characters

# Forçar HTTPS em produção
FORCE_HTTPS=false

# Domínios permitidos para CORS (separados por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================
# EMAIL (OPCIONAL)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@7care.app

# ============================================
# EXTERNAL SERVICES (OPCIONAL)
# ============================================
# Sentry - Error Monitoring
# Obtenha em: https://sentry.io
SENTRY_DSN=

# Redis - Cache
REDIS_URL=

# Push Notifications - VAPID Keys
# Gere com: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=mailto:seu@email.com

# Google Drive Integration
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=

# Google Maps (se necessário)
GOOGLE_MAPS_API_KEY=

# Firebase (se necessário)
FIREBASE_API_KEY=

# ============================================
# ANALYTICS (OPCIONAL)
# ============================================
ANALYTICS_TOKEN=

# ============================================
# TESTING
# ============================================
# Banco de dados separado para testes
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/7care_test

# ============================================
# NETLIFY (DEPLOY)
# ============================================
# Token de autenticação
# Obtenha em: https://app.netlify.com/user/applications
NETLIFY_AUTH_TOKEN=
NETLIFY_SITE_ID=
NETLIFY_STAGING_SITE_ID=

# ============================================
# FEATURE FLAGS (OPCIONAL)
# ============================================
ENABLE_2FA=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# ============================================
# DESENVOLVIMENTO
# ============================================
DEBUG=false
HOT_RELOAD=true

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 1. Nunca commite o arquivo .env no Git
# 2. Use GitHub Secrets para CI/CD
# 3. Em produção, NODE_ENV=production
# 4. Gere secrets aleatórios fortes (min 32 chars)
# 5. Configure DATABASE_URL do Neon em produção
# 6. JWT_SECRET deve ter mínimo 32 caracteres
